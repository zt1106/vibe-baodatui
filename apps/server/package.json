    "@prisma/client": "^5.19.1"
  },
  "devDependencies": {
    "tsx": "^4.15.6",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5",
    "@types/node": "^20.12.12",
    "@types/express": "^4.17.21",
    "prisma": "^5.19.1",
    "socket.io-client": "^4.7.5"
  }
}